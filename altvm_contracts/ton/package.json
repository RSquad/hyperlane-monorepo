{
  "name": "hyperlane-ton",
  "version": "0.0.1",
  "scripts": {
    "start": "blueprint run",
    "build": "blueprint build",
    "test": "jest --verbose",
    "test:mbox": "jest ./tests/Mailbox.spec.ts",
    "test:igp": "jest ./tests/InterchainGasPaymaster.spec.ts",
    "test:msig": "jest ./tests/MultisigIsm.spec.ts",
    "test:va": "jest ./tests/ValidatorAnnounce.spec.ts",
    "test:mhook": "jest ./tests/MerkleHookMock.spec.ts",
    "deploy:msig": "npx blueprint run deployMultisigIsm --mnemonic --testnet",
    "deploy:rcpnt": "npx blueprint run deployRecipientMock --mnemonic --testnet",
    "deploy:igp": "npx blueprint run deployInterchainGasPaymaster --mnemonic --testnet",
    "deploy:mbox": "npx blueprint run deployMailbox --mnemonic --testnet",
    "deploy:va": "npx blueprint run deployValidatorAnnounce --mnemonic --testnet",
    "deploy:mhook": "npx blueprint run deployMerkleHookMock --mnemonic --testnet",
    "deploy:all": "npm run deploy:msig && npm run deploy:igp && npm run deploy:rcpnt && npm run deploy:mbox && npm run deploy:va",
    "send:process": "npx blueprint run sendProcess --mnemonic --testnet",
    "send:pd": "npx blueprint run sendPostDispatch --mnemonic --testnet",
    "send:setv": "npx blueprint run sendSetValidatorsAndThreshold --mnemonic --testnet",
    "send:dispatch": "npx blueprint run sendDispatch --mnemonic --testnet"
  },
  "type": "module",
  "devDependencies": {
    "@ton/blueprint": "^0.24.0",
    "@ton/core": "~0",
    "@ton/crypto": "^3.3.0",
    "@ton/sandbox": "^0.22.0",
    "@ton/test-utils": "^0.4.2",
    "@ton/ton": "^15.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
